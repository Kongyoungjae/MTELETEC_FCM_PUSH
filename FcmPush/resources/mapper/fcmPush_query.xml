<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="admin">
    
    <select id="selectPushInfoByDateTime" resultType="hashmap" >
       
       SELECT 
        	PUSH_ID
          FROM TB_PUSH
        WHERE 
        <![CDATA[ REL_DT = DATE_FORMAT(#{nowDateTime},'%Y-%m%-%d %H:%i:%s') ]]>
        	AND SEND_YN = 'Y'
    </select>
    
    <select id="selectPushHistByPushID" resultType="hashmap" >   
    	SELECT 
    		T1.PUSH_ID
		 FROM TB_PUSH_HIST T1
		INNER JOIN TB_PUSH T2 ON T1.PUSH_ID = T2.PUSH_ID
		WHERE T1.PUSH_ID = #{PUSH_ID}
		 AND SENT = 'Y'
    </select>
    
    

    
    <select id="selectUsersToken" resultType="String" >
        SELECT 
        	FCM_TOKEN
          FROM TB_USER
        ORDER BY REG_DT ASC
    </select>
    
    <insert id="insertPushGroup">
    	INSERT INTO TB_PUSH_GROUP
   		(
    		GROUP_SEQ
   		   ,GROUP_ID
   		   ,REG_SUCCESS_CNT
   		   ,REG_FAIL_CNT
   		   ,REG_DT
   		)
   		VALUES 
   		(
   		    #{GROUP_SEQ}
   		   ,#{GROUP_ID}
   		   ,#{REG_SUCCESS_CNT}
   		   ,#{REG_FAIL_CNT}
   		   ,NOW()
   		)
    </insert>

    <delete id = "deleteAllPushGroups"> 
    	DELETE 
    	 FROM TB_PUSH_GROUP 
    	WHERE 1=1
    </delete>

</mapper>