<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="admin">
    
    <select id="selectTodayPushInfoByNowDateTime" parameterType="map" resultType="hashmap" >      
       SELECT 
        	PUSH_ID
           ,TITLE
           ,BODY
           ,IMG
           ,URL
           ,REL_DT
           ,SEND_TARGET
         FROM TB_PUSH
        WHERE 
        <![CDATA[ 
        	REL_DT = DATE_FORMAT(#{nowDateTime},'%Y-%m%-%d %H:%i:%s') 
        	AND SEND_YN = 'Y'
        ]]>
    </select>
    
    <!-- duplicate 관련 이름으로 바꾸면 좋을거같다 -->
    <select id="selectPushHistCountByPushID" parameterType="map" resultType="int" >   
    	SELECT 
    		COUNT(T1.SEQ)
		FROM TB_PUSH_HIST T1
		JOIN TB_PUSH T2 ON T1.PUSH_ID = T2.PUSH_ID
		WHERE T1.PUSH_ID = #{PUSH_ID}
	      AND SENT = 'Y'
    </select>
    
    <select id="selectUsersTokenBefore4AM" parameterType="map" resultType="String" >
        SELECT 
        	FCM_TOKEN
          , MIN(REG_DT)
        FROM TB_USER
        WHERE
        <![CDATA[
        	REG_DT <= DATE_FORMAT(NOW(),'%Y-%m%-%d 03:59:59')
        ]]>
        GROUP BY FCM_TOKEN 
	    ORDER BY MIN(REG_DT) ASC
    </select>
    
    <select id="selectUsersTokenAfter4AM" parameterType="map" resultType="String" >
        SELECT 
        	FCM_TOKEN
          , MIN(REG_DT)
        FROM TB_USER
        WHERE
        <![CDATA[
        	REG_DT >= DATE_FORMAT(NOW(),'%Y-%m%-%d 04:00:00')
        ]]>
        GROUP BY FCM_TOKEN 
	    ORDER BY MIN(REG_DT) ASC
    </select>

    <select id="selectJoinUsersTokenAfterLastPushTime" parameterType="map" resultType="String" >
        SELECT 
        	FCM_TOKEN
          , MIN(REG_DT)
        FROM TB_USER
        WHERE
        <![CDATA[
        	REG_DT >= DATE_FORMAT(#{REL_DT},'%Y-%m%-%d %H:%i:%s')
        ]]>
        GROUP BY FCM_TOKEN 
	    ORDER BY MIN(REG_DT) ASC
    </select>     
    
    <select id="selectPushHistLastPushTime" resultType="hashmap" >
		SELECT
			  SEQ 
			 ,REL_DT
			 ,MIN(NOW()- REL_DT) AS REL
		FROM TB_PUSH_HIST
		GROUP BY SEQ,REL_DT
		ORDER BY REL ASC
		LIMIT 1
    </select>   
    
    <select id="selectTodayPushHistCount" parameterType="map" resultType="int" >   
		SELECT COUNT(*)
		  FROM TB_PUSH_HIST 
		WHERE 
		<![CDATA[ 
			REL_DT >= DATE_FORMAT(NOW(),'%Y-%m-%d 00:00:00')
		AND REL_DT <= DATE_FORMAT(NOW(),'%Y-%m-%d 23:59:59')
		]]>
    </select>
    
    <select id="selectMaxGroupSEQ" resultType="int">
    	SELECT 
    		IFNULL(MAX(GROUP_SEQ),0)
    	  FROM TB_PUSH_GROUP
    </select>
    
    <insert id="insertPushGroup">
    	INSERT INTO TB_PUSH_GROUP
   		(
    		GROUP_SEQ
   		   ,GROUP_ID
   		   ,REG_SUCCESS_CNT
   		   ,REG_FAIL_CNT
   		   ,REG_DT
   		)
   		VALUES 
   		(
   		    #{GROUP_SEQ}
   		   ,#{GROUP_ID}
   		   ,#{REG_SUCCESS_CNT}
   		   ,#{REG_FAIL_CNT}
   		   ,NOW()
   		)
    </insert>
    
    <insert id="insertPushHist">
    	INSERT INTO TB_PUSH_HIST
   		(
   		    REL_DT
   		   ,PUSH_ID
   		   ,SEND_TARGET
   		   ,SENT
   		)
   		VALUES 
   		(
   		    #{REL_DT}
   		   ,#{PUSH_ID}
   		   ,#{SEND_TARGET}
   		   ,'Y'
   		)
    </insert>

    <delete id="deleteAllPushGroups"> 
    	DELETE 
    	 FROM TB_PUSH_GROUP 
    	WHERE 1=1
    </delete>

</mapper>